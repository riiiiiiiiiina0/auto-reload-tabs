{
  "manifest_version": 3,
  "name": "Reloader Bear",
  "version": "1.3",
  "description": "Automatically reloads tabs based on URL patterns.",
  "icons": {
    "16": "icons/icon-16x16.png",
    "32": "icons/icon-32x32.png",
    "48": "icons/icon-48x48.png",
    "128": "icons/icon-128x128.png"
  },
  "permissions": [
    "tabs",
    "storage",
    "alarms"
  ],
  "background": {
    "service_worker": "src/background/service-worker.js"
  },
  "action": {
    "default_title": "Reloader Bear"
  },
  "options_page": "src/options/options.html"
}
