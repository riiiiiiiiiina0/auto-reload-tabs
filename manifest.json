{
  "manifest_version": 3,
  "name": "Tab Reloader",
  "version": "1.0",
  "description": "Automatically reloads tabs based on URL patterns.",
  "permissions": [
    "storage",
    "tabs",
    "alarms"
  ],
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Tab Reloader"
  }
}